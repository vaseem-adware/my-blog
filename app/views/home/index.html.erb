<div class="container">
  <!-- Stack the columns on mobile by making one full-width and the other half-width -->
  <div class="row">
    <div class="col-md-8">
      <%@posts.each do |post|%>
        <div class="card mb-3">
          <%= image_tag post.image.url.to_s, class: "card-img-top" %>
          <div class="card-body">
            <h5 class="card-title">
              <%=link_to post.title, article_path(post)%>
            </h5>
            <p class="card-text"><%=post.intro%></p>
            <p class="card-text"><small class="text-muted"><%=post.created_at.strftime('%d %B %Y')%></small></p>
          </div>
        </div>
        <%end%>
    </div>
    <div class="col-12 col-md-4">
      
      <div class="card">
        <div class="card-body">
          <h5>About Blog</h5>
          <hr/>
          <p>
            <%=@setting.about%>
          </p>
        </div>
      </div>
       <br/>
      <div class="card">
        <div class="card-body">
          <h5>Popular Posts</h5>
          <hr/>
          <ul class="popular-posts">
            <%@popular_posts.each do |popular_post|%>
            <li>    
              <a href=""><%=popular_post.title%></a><br>
            </li>
            <%end%>
          </ul>
        </div>
      </div>
      
      <br/>
      <div class="card">
        <div class="card-body">
          <h5>Pr√©sentation</h5>
          <hr/>
          <div class="ratio ratio-16x9">
  <iframe src="https://www.youtube.com/embed/ZEyAs3NWH4A" title="YouTube video" allowfullscreen></iframe>
</div>
        </div>
      </div>
      
      
      
      
    </div>
  </div>
<%=will_paginate @posts%>